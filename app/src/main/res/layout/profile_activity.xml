<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Profile"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TextView-name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NameText"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        />
    <TextView
        android:id="@+id/TextView-email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emailtext"
        />

    <EditText

        android:autofillHints="@string/Hinttext"
        android:id="@+id/digitedEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        />
    <TextView
        android:id="@+id/TextView-pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/picturetext" />

    <ImageButton
        android:id="@+id/btn_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/TextView-button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/instructions" />
</LinearLayout>
